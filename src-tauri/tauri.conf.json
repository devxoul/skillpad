{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SkillPad",
  "version": "0.5.1",
  "identifier": "com.skillpad.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:vite",
    "beforeBuildCommand": "bun run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "SkillPad",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "focus": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/devxoul/skillpad/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdCQzRFNEZDRkE4REY2NUEKUldSYTlvMzYvT1RFZTY4SkZucXhHdm5oTVVxSVJDT2o1Wnova2JSWkY2MGhMR0YxeFpMZDZObXQK"
    },
    "deep-link": {
      "desktop": {
        "schemes": ["skillpad"]
      }
    }
  }
}
