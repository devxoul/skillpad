{
  "name": "skillpad",
  "version": "0.1.0",
  "description": "A Tauri v2 desktop application built with React, TypeScript, and Bun",
  "type": "module",
  "scripts": {
    "clean": "cargo clean --manifest-path src-tauri/Cargo.toml && rm -rf dist node_modules/.vite",
    "dev": "tauri dev --config src-tauri/tauri.dev.conf.json",
    "build": "tauri build",
    "dev:vite": "vite",
    "dev:e2e": "VITE_E2E=true vite",
    "build:vite": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "concurrently -n biome,eslint -c blue,yellow 'biome check --colors=force .' 'FORCE_COLOR=1 eslint .'",
    "lint:fix": "concurrently -n biome,eslint -c blue,yellow 'biome check --write --unsafe --colors=force .' 'FORCE_COLOR=1 eslint --fix .'",
    "format": "biome format --write .",
    "test": "bun test src/",
    "test:e2e": "bunx playwright test",
    "icon": "bunx tauri icon src-tauri/icons/icon.png && rm -rf src-tauri/icons/ios src-tauri/icons/android",
    "icon:dev": "bunx tauri icon src-tauri/icons/dev/icon.png --output src-tauri/icons/dev && rm -rf src-tauri/icons/dev/ios src-tauri/icons/dev/android"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-alpha.12",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@lobehub/icons": "^4.1.0",
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/api": "^2.3.0",
    "@tauri-apps/plugin-http": "^2.5.6",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.2.1",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@playwright/test": "^1.58.2",
    "@sinonjs/fake-timers": "^15.1.0",
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/cli": "^2.9.6",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "@tauri-apps/plugin-store": "^2",
    "@tauri-apps/plugin-window-state": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bun": "latest",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/sinonjs__fake-timers": "^15.0.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-plugin-better-tailwindcss": "^4.0.2",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.7"
  }
}
