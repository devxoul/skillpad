{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SkillPad",
  "version": "0.1.0",
  "identifier": "com.skillpad.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:vite",
    "beforeBuildCommand": "bun run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "SkillPad",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "focus": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "backgroundColor": [28, 28, 30, 255]
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "bundleName": "SkillPad"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
